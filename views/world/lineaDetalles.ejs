      function listarDatosRuc() {
        var ruc = $("#txtRuc").val();

        $("#loader").addClass("loading");
        $.ajax({
          url: '/listarDatosRuc?ruc=' + ruc,
          type: 'GET',
          success: function (res) {
            $("#loader").removeClass("loading").addClass("noloading");
            var datos = res;
            $("#NOMBRE_COMERCIAL").html(datos.NOMBRE_COMERCIAL);
            $("#INTERSECCION").html(datos.INTERSECCION);
            $("#CALLE").html(datos.CALLE);
            $("#DESCRIPCION_PROVINCIA").html(datos.DESCRIPCION_PROVINCIA);
            $("#NUMERO").html(datos.NUMERO);
            $("#CLASE_CONTRIBUYENTE").html(datos.CLASE_CONTRIBUYENTE);
            $("#ACTIVIDAD_ECONOMICA").html(datos.ACTIVIDAD_ECONOMICA);
            $("#RAZON_SOCIAL").html(datos.RAZON_SOCIAL);
            $("#TIPO_CONTRIBUYENTE").html(datos.TIPO_CONTRIBUYENTE);
            $("#FECHA_INICIO_ACTIVIDADES").html(datos.FECHA_INICIO_ACTIVIDADES);
            $("#OBLIGADO").html(datos.OBLIGADO);
            listarDatosMicroempresa();
            console.log(res);
          }, error: function (xhr, status) {
            $("#loader").removeClass("loading").addClass("noloading");
            alert('Disculpe, existió un problema');
          }
        });
      }


      function listarDatosMicroempresa() {
